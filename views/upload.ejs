<body>

  <!-- ======= Header ======= -->
  <header id="header" class="header fixed-top">
    <div class="container-fluid container-xl d-flex align-items-center justify-content-between">

      <a href="/dashboard" class="logo d-flex align-items-center">
        <img src="/assets/logo.png" alt="">
      </a>

      <nav id="navbar" class="navbar">
        <ul>
          <li><a class="nav-link scrollto" id="co2-update" href="/upload">Upload Image</a></li>
          <li><a class="nav-link scrollto" id="reportLink" href="/gallary">View Gallary</a></li>
          <li><a class="nav-link scrollto" href="/auth/dashboard">Dashboard</a></li>
          <li><a class="getstarted scrollto" href="/auth/logout">Logout</a></li>
        </ul>
        <i class="bi bi-list mobile-nav-toggle"></i>
      </nav><!-- .navbar -->

    </div>
  </header><!-- End Header -->

  <!-- ======= Hero Section ======= -->
  <section id="hero" class="hero d-flex align-items-center" style="justify-content: center;">

    <div data-aos="" data-aos-delay="200" class="container" style="top: 50px;max-width: 540px;">
      <div class="form">
        <span class="title">Upload Your Photograph</span>

        <form action="/ipfs/upload" id="form-upload" method="POST" enctype="multipart/form-data">
          <div class="input-field">
            <input id="walletID" type="text" name="walletID" placeholder="Enter your Wallet" required readonly>
            <i class="bi bi-envelope icon"></i>
          </div>
          <div class="input-field">
            <input id="name" type="text" name="name" placeholder="Enter Name" required readonly>
            <i class="bi bi-check"></i>
          </div>
          <div>
            <div class="input-field">
              <input id="photo-uploaded" name="file" type="file" placeholder="Enter Co2 Emission (in ton)" required>
              <i class="bi bi-arrow-right"></i>
            </div>
            <div class="input-field">
              <input id="photoDescription" name="description" type="text" placeholder="Photo Description" required>
              <i class="bi bi-arrow-right"></i>
            </div>
          </div>
          <div class="input-field button">
            <input type="submit" value="Sumbit">
          </div>

        </form>
      </div>
    </div>

  </section><!-- End Hero -->
